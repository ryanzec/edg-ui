{
  "name": "edg-ui",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "css:build-variables": "tsx scripts/process-design-variables.ts",
    "dev": "vite dev",
    "dev:force": "vite dev --force",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm run test:integration && npm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "lint:eslint": "eslint .",
    "lint:eslint:fix": "eslint . --fix",
    "format": "eslint --fix . && prettier --write .",
    "test:components": "playwright test",
    "test:components:ui": "playwright test --config playwright-all.config.ts --ui",
    "test:components:edge-case": "playwright test --config playwright-edge-case.config.ts",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch",
    "upgrade-interactive": "NPM_CHECK_INSTALLER=pnpm npm-check -u -E",
    "prepare": "husky"
  },
  "devDependencies": {
    "@melt-ui/pp": "0.3.2",
    "@melt-ui/svelte": "0.86.2",
    "@playwright/test": "1.49.1",
    "@stylistic/eslint-plugin": "2.12.1",
    "@sveltejs/adapter-auto": "3.3.1",
    "@sveltejs/kit": "2.11.1",
    "@sveltejs/vite-plugin-svelte": "5.0.2",
    "@tailwindcss/postcss": "4.0.0-beta.7",
    "@types/eslint": "9.6.1",
    "@types/lodash-es": "4.17.12",
    "@types/node": "20.12.12",
    "@types/scrollparent": "2.0.3",
    "@typescript-eslint/eslint-plugin": "8.18.0",
    "@typescript-eslint/parser": "8.18.0",
    "eslint": "9.17.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-svelte": "2.46.1",
    "husky": "9.1.7",
    "lint-staged": "15.2.11",
    "npm-check": "6.0.1",
    "postcss": "8.4.49",
    "prettier": "3.4.2",
    "prettier-plugin-svelte": "^3.2.6",
    "prettier-plugin-tailwindcss": "0.6.9",
    "svelte": "5.13.0",
    "svelte-check": "4.1.1",
    "tailwind-merge": "2.5.5",
    "tailwindcss": "4.0.0-beta.7",
    "tslib": "2.8.1",
    "tsx": "4.19.2",
    "typescript": "^5.5.0",
    "vite": "6.0.3",
    "vitest": "3.0.0-beta.1"
  },
  "type": "module",
  "dependencies": {
    "@floating-ui/dom": "^1.6.5",
    "dayjs": "1.11.13",
    "debounce": "2.2.0",
    "fast-deep-equal": "3.1.3",
    "lodash-es": "4.17.21",
    "mitt": "3.0.1",
    "overlayscrollbars": "2.10.1",
    "overlayscrollbars-svelte": "0.5.4",
    "scrollparent": "2.1.0",
    "zod": "3.24.1"
  }
}
