{
  "name": "edg-ui",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "dev:force": "vite dev --force",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm run test:integration && npm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "lint:eslint": "eslint .",
    "format": "eslint --fix . && prettier --write .",
    "test:components": "playwright test",
    "test:components:ui": "playwright test --config playwright-all.config.ts --ui",
    "test:components:edge-case": "playwright test --config playwright-edge-case.config.ts",
    "test:unit": "vitest",
    "upgrade-interactive": "NPM_CHECK_INSTALLER=pnpm npm-check -u -E",
    "prepare": "husky"
  },
  "devDependencies": {
    "@melt-ui/pp": "0.3.2",
    "@melt-ui/svelte": "0.86.2",
    "@playwright/test": "1.44.0",
    "@stylistic/eslint-plugin": "1.8.0",
    "@sveltejs/adapter-auto": "3.3.1",
    "@sveltejs/kit": "2.11.1",
    "@sveltejs/vite-plugin-svelte": "5.0.2",
    "@types/eslint": "8.56.10",
    "@types/lodash-es": "4.17.12",
    "@types/node": "20.12.12",
    "@types/scrollparent": "2.0.3",
    "@typescript-eslint/eslint-plugin": "7.8.0",
    "@typescript-eslint/parser": "7.8.0",
    "autoprefixer": "10.4.19",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-svelte": "2.46.1",
    "husky": "9.0.11",
    "lint-staged": "15.2.2",
    "npm-check": "6.0.1",
    "postcss": "8.4.38",
    "prettier": "3.2.5",
    "prettier-plugin-svelte": "^3.2.6",
    "prettier-plugin-tailwindcss": "0.6.9",
    "svelte": "5.12.0",
    "svelte-check": "4.1.1",
    "tailwind-merge": "2.3.0",
    "tailwindcss": "3.4.3",
    "tslib": "2.6.2",
    "typescript": "^5.5.0",
    "vite": "6.0.3",
    "vitest": "2.1.8"
  },
  "type": "module",
  "dependencies": {
    "@floating-ui/dom": "^1.6.5",
    "debounce": "2.0.0",
    "fast-deep-equal": "3.1.3",
    "lodash-es": "4.17.21",
    "mitt": "3.0.1",
    "overlayscrollbars": "2.8.0",
    "overlayscrollbars-svelte": "0.5.4",
    "scrollparent": "2.1.0",
    "zod": "3.23.6"
  }
}
